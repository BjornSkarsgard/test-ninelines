									svg.lvl__shape.lvl__shape__3(width="81.469" height="99.656" viewbox="0 0 81.469 99.656")
										defs
										path.lvl__shape__3path(d="M395.248,649.26A126.875,126.875,0,0,1,443.04,748.9H389.053c0-25.343-10.4-43.4-27.486-57.291Z" transform="translate(-361.562 -649.25)")
