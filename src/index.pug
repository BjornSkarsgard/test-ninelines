extends pug/base
include pug/skills

prepend vars

append vars
	-
		input = [
					{name: "Иван", placeholder: "Имя", type: "text"},
					{name: "1999-01-28", placeholder: "Дата рождения", type: "date"},
					{name: "Тюмень", placeholder: "Город", type: "text"},
					{name: "bjornskarsgarddev@gmail.com", placeholder: "Контактные данные", type: "text"}
						]
block content
	section.form
		.container.form__container
			.form__wrapper
				.row
					.col-12.col-sm-4.col-md-3
						.form__img
							img.form__image(src="./images/photo.jpg" height="137" width="138" alt="Фото")

					.col-12.col-sm-8.col-md-9
						.form__data-block
							each val, index in input
								label
									input.form__input(type=val.type placeholder=val.placeholder value=val.name)
									span.form__input-decorate

		.container.form__container
			.form__wrapper
				.form__skills
					.row
						.col-4
							span.form__title
								| Навыки
					+skills()

		.container.form__container
			.form__wrapper
				.lvl
					.row
						.col-12.col-md-5
							.lvl__graph
								.lvl__graph-wrapper
									svg.lvl__shape.lvl__shape__1(width="84" height="99.656" viewbox="0 0 84 99.656")
